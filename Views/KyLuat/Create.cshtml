@model qlnv.Models.KyLuat

@{
    ViewData["Title"] = "Create";
}



<h4>Thêm mới kỷ luật</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaKL" class="control-label"></label>
                <input asp-for="MaKL" class="form-control" />
                <span asp-validation-for="MaKL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenKL" class="control-label"></label>
                <input asp-for="TenKL" class="form-control" />
                <span asp-validation-for="TenKL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Về bảng Kỷ luật</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
