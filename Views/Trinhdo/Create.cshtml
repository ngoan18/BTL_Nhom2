@model qlnv.Models.Trinhdo

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm trình độ mới</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Matd" class="control-label">Mã trình độ</label>
                <input asp-for="Matd" class="form-control" />
                <span asp-validation-for="Matd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tentd" class="control-label">Trình độ học vấn</label>
                <input asp-for="Tentd" class="form-control" />
                <span asp-validation-for="Tentd" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Về bảng trình độ </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
