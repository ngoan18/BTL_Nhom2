@model IEnumerable<qlnv.Models.Trinhdo>

@{
    ViewData["Title"] = "Index";
}

<h1>Bảng trình độ</h1>

<p>
    <a asp-action="Create">Thêm trình độ mới</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.Matd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tentd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.Matd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tentd)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Matd">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.Matd">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.Matd">Xoá</a>
            </td>
        </tr>
}
    </tbody>
</table>
