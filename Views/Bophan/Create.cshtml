@model qlnv.Models.Bophan

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm bộ phận mới</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mabp" class="control-label">Mã bộ phận</label>
                <input asp-for="Mabp" class="form-control" />
                <span asp-validation-for="Mabp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tenbp" class="control-label"> Tên bộ phận</label>
                <input asp-for="Tenbp" class="form-control" />
                <span asp-validation-for="Tenbp" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Về bảng bộ phận</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
