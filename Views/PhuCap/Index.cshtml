@model IEnumerable<qlnv.Models.PhuCap>

@{
    ViewData["Title"] = "Index";
}

<h1>Bảng phụ Cấp</h1>

<p>
    <a asp-action="Create">Thêm mới phụ cấp</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tenpc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoTien)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tenpc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoTien)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Mapc">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.Mapc">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.Mapc">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
