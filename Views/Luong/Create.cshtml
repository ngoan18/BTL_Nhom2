@model qlnv.Models.Luong

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm lương mới</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LuongCB" class="control-label">Lương cơ bản</label>
                <input asp-for="LuongCB" class="form-control" />
                <span asp-validation-for="LuongCB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Macv" class="control-label">Chức vụ</label>
                <select asp-for="Macv" class="form-control" asp-items="ViewBag.Macv"></select>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Về bảng lương</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
